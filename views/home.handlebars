<div class="heroSection">
    <img src="/img/valhallaCooking.jpg" alt="Hero Section Background">
</div>

<div class="homeContentSection">
    <div class="homeContentTitle">
        <h2>All Valhalla Meals are:</h2>
    </div>

    <div class="homePerks">
        <div class="perkCard">
            <img src="/img/local.jpg">
            <p>Locally Sourced</p>
        </div>
        <div class="perkCard">
            <img src="/img/raised.jpg">
            <p>Viking Raised</p>
        </div>
        <div class="perkCard">
            <img src="/img/best.jpg">
            <p>Farm Fresh</p>
        </div>
    </div>
</div>

<h3 class="mealsTitle">Check out our Valhalla Favourites!</h3>

<div class="mealsSection">
    {{#each topMeals}}
    <div class="mealCard">
        <img src="/img/{{this.imgCode}}">
        <h4>{{this.title}}</h4>
        <p class="price">${{this.price}}</p>
    </div>
    {{/each}}
</div>